/* pages/todo/index.wxss */

page {
  background-color: #f4f4f4;
  height: 100%;
}

/* 头部*/

.header {
  width: 100%;
  background-color: #f4f4f4;
  height: 80px;
  border-top: 1px solid #e2be2d;
  border-radius: 10px;
}

.header .title {
  color: #e2be2d;
  font-size: 25px;
  float: left;
  margin-left: 10px;
}

.header .edit {
  float: right;
  display: block;
  text-align: right;
  margin-right: 10px;
}

.header .edit .a {
  display: block;
  color: #e2be2d;
  font-size: 25px;
}

.header .edit .b {
  display: block;
  color: #3f98d6;
  font-size: 12px;
}

.hr {
  clear: both;
  border-top: 1px solid #e6e6e6;
  margin: 5px;
}

/* 列表 */

.todo_list {
  width: 100%;
  background-color: '#affffa';
  border-radius: 5px;
  padding-left: 10px;
}

.todo_list checkbox-group {
  width: 100%;
}

.todo_list label {
  width: 100%;
  display: block;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #efefef;
}

.todo_list label image {
  width: 24px;
  height: 24px;
  margin-top: 8px;
  float: right;
  margin-right: 15px;
}

/* 输入 */

.add_todo {
  clear: both;
  width: 100%;
  border-bottom: 1px solid #efefef;
  height: 40px;
  line-height: 40px;
  padding-left: 10px;
  /* border: 1px solid red; */
}

.add_todo image {
  width: 24px;
  height: 24px;
  margin-top: 8px;
  float: left;
  margin-right: 5px;
}

.add_todo .task {
  float: left;
  width: 70%;
  height: 24px;
  margin-top: 8px;
}
