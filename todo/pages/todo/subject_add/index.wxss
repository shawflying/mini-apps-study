/* pages/todo/subject_add/index.wxss */

page {
  background-color: #f4f4f4;
  height: 100%;
}

.SA_body {
  width: 100%;
  height: 50px;
}

.hr {
  border-top: 1px solid #e6e6e6;
  margin: 5px;
}

.SA_color {
  width: 100%;
  height: 40px;
}

.SA_body input {
  font-size: 20px;
  margin-left: 15px;
  padding-top: 15px;
  float: left;
}

/*控制输入框文字样式  */

.sa_input {
  color: #ababab;
}

.SA_body .right {
  float: right;
  margin-right: 10px;
  text-align: right;
  height: 40px;
  margin-top: 5px;
}

.SA_body .right image {
  width: 20px;
  height: 20px;
}

.SA_body .right text {
  display: block;
  font-size: 12px;
  color: #3b96cc;
}

.SA_radio {
  width: 15px;
  height: 15px;
  border-radius: 10px;
  background-color: blue;
  float: left;
  margin-left: 25px;
  margin-top: 10px;
}

.sa_w {
  width: 15px;
  height: 15px;
  border-radius: 10px;
  float: left;
  margin-left: 25px;
  margin-top: 10px;
  border: 1px solid red;
  border-color: green;
}

.sa_n {
  width: 11px;
  height: 11px;
  border-radius: 10px;
  margin: 2px;
}
